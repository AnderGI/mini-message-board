doctype html 
html(lang="es")
    head   
        title Message Board
    body
        main
            h1 Mini Message Board
            section
                each message in messages=messages 
                    article     
                        header 
                            h2 #{message.user}
                        main 
                            p #{message.text} 
                            p #{message.added}
        
        footer
            p
                a(href="/new") New form